<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16px"
    android:background="@color/gray"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="16sp"
        android:text="0"
        android:textSize="32sp"
        android:padding="15dp"
        android:background="@color/white"
        />




    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="8dp"
        android:layout_margin="16sp"
        android:useDefaultMargins="true"
       >
<!--primera fila-->
        <Button
            android:id="@+id/uno"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/dos"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/tres"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="3"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/dividir"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="/"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_simbolos"/>

        <!--segunda fila-->
        <Button
            android:id="@+id/cuatro"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="4"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/cinco"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/seis"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="6"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/multiplicar"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:text="x"
            android:textSize="30sp"
            android:background="@drawable/btn_redondo_numeros"
            android:backgroundTint="@color/teal_200"/>

        <!--tercera fila-->
        <Button
            android:id="@+id/siete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/ocho"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/nueve"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/menos"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="-"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <!--cuarta fila-->
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=""
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/cero"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/punto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=","
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/suma"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <!--primera fila-->
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=""
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/borrar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="c"
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=""
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>
        <Button
            android:id="@+id/igual"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:textSize="30dp"
            android:background="@drawable/btn_redondo_numeros"/>





    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="por: Carlos Zuluaga"
        android:textSize="18dp"/>




    </LinearLayout>
